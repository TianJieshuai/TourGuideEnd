<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#34393f"
        >

        <ImageView
            android:layout_width="20px"
            android:layout_height="40px"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_marginLeft="30px"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="40px"
            android:text="修改手机号"
            android:textColor="#fff" />

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="70px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <ImageView
            android:layout_marginLeft="45px"
            android:src="@mipmap/shoujihao2x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginLeft="30px"
            android:hint="请输入新手机号"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="100px" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <ImageView
            android:layout_marginLeft="45px"
            android:src="@mipmap/yanzhenma2x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginLeft="30px"
            android:hint="请输入验证码"
            android:background="#fff"
            android:layout_width="430px"
            android:layout_height="100px" />
        <View
            android:background="#d3d3d3"
            android:layout_width="1px"
            android:layout_height="25px"/>
        <TextView
            android:layout_marginLeft="35px"
            android:textColor="#efe538"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_marginTop="135px"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="确认"
            android:textColor="#fff"
            android:background="#00c899"
            android:layout_width="650px"
            android:layout_height="80px" />
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
