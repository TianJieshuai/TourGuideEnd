<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340px"
            android:layout_marginTop="25px"
            android:text="订单"
            android:textColor="#fff"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/order_message"
            android:layout_width="40px"
            android:layout_height="30px"
            android:layout_marginLeft="260px"
            android:layout_marginTop="25px"
            android:src="@mipmap/ic_launcher" />
    </com.zhy.autolayout.AutoLinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/order_grab_single"
                android:layout_width="690px"
                android:layout_height="130px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45px"
                android:background="@drawable/shape1"
                android:text="我的抢单服务"
                android:textColor="#fff"
                android:textSize="30px" />


            <Button
                android:id="@+id/order_Orderbooking"
                android:layout_width="690px"
                android:layout_height="130px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45px"
                android:background="@drawable/shape2"
                android:text="预约订单服务"
                android:textColor="#fff"
                android:textSize="30px" />

            <Button
                android:id="@+id/order_MyRoute"
                android:layout_width="690px"
                android:layout_height="130px"
                android:text="我的路线服务"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45px"
                android:background="@drawable/shape3"
                android:textColor="#fff"
                android:textSize="30px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v7.widget.CardView>

</com.zhy.autolayout.AutoLinearLayout>