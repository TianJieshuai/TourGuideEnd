<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#34393f"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="40px"
            android:text="安全设置"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="42px"
            android:layout_height="32px"
            android:layout_alignBottom="@id/tv_title"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30px"
            app:srcCompat="@drawable/left" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/relat"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/zhanghaoanquan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20px"
            android:layout_toEndOf="@+id/imageView2"
            android:text="账号安全" />

        <include layout="@layout/right_icon" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="#d1d1d1" />

    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/yinsi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginStart="20px"
            android:layout_toEndOf="@+id/imageView4"
            android:text="隐私设置" />

        <include layout="@layout/right_icon" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="#d1d1d1" />

    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/zhucexieyi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20px"
            android:layout_toEndOf="@+id/imageView5"
            android:text="用户注册协议" />

        <include layout="@layout/right_icon" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="#d1d1d1" />

    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">

        <ImageView

            android:id="@+id/imageView6"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/qingchuhuancun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20px"
            android:layout_toEndOf="@+id/imageView6"
            android:text="清除缓存" />

        <include layout="@layout/right_icon" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="#d1d1d1" />

    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/yijianjianyi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView7"
            android:layout_marginStart="20px"
            android:layout_toEndOf="@+id/imageView7"
            android:text="意见建议" />

        <include layout="@layout/right_icon" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="#d1d1d1" />
</com.zhy.autolayout.AutoLinearLayout>

