<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#34393f"
        android:paddingTop="40px">

        <ImageView
            android:layout_width="20px"
            android:layout_height="50px"
            android:layout_gravity="center|left"
            android:layout_marginLeft="30px"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="详情路线"
            android:textColor="#fff" />
        />
    </com.zhy.autolayout.AutoRelativeLayout>
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/mheader_iamge"
        android:layout_width="match_parent"
        android:layout_height="350px" />
    <com.zhy.autolayout.AutoRelativeLayout
        android:paddingTop="30px"
        android:paddingRight="30px"
        android:layout_below="@id/mheader_iamge"
        android:paddingLeft="30px"
        android:layout_width="match_parent"
        android:layout_height="225px">
        <TextView
            android:id="@+id/ddbh"
            android:text="订单编号：201704052365"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cxsj"
            android:layout_below="@id/ddbh"
            android:text="出行时间：2017/02/12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/lxmc"
            android:text="路线名称：云南5日游"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/cxsj"
            android:layout_alignBaseline="@+id/crjg"
            android:text="¥"
            android:textColor="#f00" />
        <TextView
            android:id="@+id/crjg"
            android:layout_below="@id/cxsj"
            android:layout_toRightOf="@id/rmb"
            android:text="2000"
            android:textSize="20dp"
            android:textColor="#f00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/crjg"
            android:layout_alignBottom="@+id/crjg"
            android:layout_toEndOf="@+id/crjg"
            android:text="起/人(成人)" />
        <TextView
            android:id="@+id/rmb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rmb"
            android:text="¥"
            android:layout_alignBaseline="@+id/etjg"
            android:textColor="#f00" />
        <TextView
            android:id="@+id/etjg"
            android:layout_below="@id/crjg"
            android:layout_toRightOf="@id/rmb1"
            android:text="2000"
            android:textSize="20dp"
            android:textColor="#f00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etjg"
            android:layout_alignBottom="@+id/etjg"
            android:layout_toEndOf="@+id/etjg"
            android:text="起/人(儿童)" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:background="#eaebed"
        android:layout_width="match_parent"
        android:layout_height="17px"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px">
        <ImageView
            android:id="@+id/flag4"
            android:layout_marginLeft="32px"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_width="35px"
            android:layout_height="30px" />
        <TextView
            android:layout_toRightOf="@id/flag4"
            android:gravity="center_vertical"
            android:paddingLeft="15px"
            android:layout_width="match_parent"
            android:text="路线行程"
            android:layout_height="100px" />


    </com.zhy.autolayout.AutoRelativeLayout>
    <include
        layout="@layout/rotedetails_recycler_item"/>
    <View
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="#eaebed"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
    <include
        layout="@layout/rotedetails_recycler_item"/>
</com.zhy.autolayout.AutoLinearLayout>
