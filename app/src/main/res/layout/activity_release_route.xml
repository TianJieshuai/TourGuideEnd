<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#34393f"
        android:paddingTop="40px">

        <ImageView
            android:layout_width="20px"
            android:layout_height="50px"
            android:layout_gravity="center|left"
            android:layout_marginLeft="30px"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="详情路线"
            android:textColor="#fff" />
        />
    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:id="@+id/mheader_iamge"
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:src="@mipmap/ic_launcher" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="225px"
        android:layout_below="@id/mheader_iamge"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="30px">

        <TextView
            android:id="@+id/ddbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号：201704052365" />

        <TextView
            android:id="@+id/cxsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ddbh"
            android:text="出行时间：2017/02/12" />

        <TextView
            android:id="@+id/lxmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="路线名称：云南5日游" />

        <TextView
            android:id="@+id/rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/crjg"
            android:layout_alignParentStart="true"
            android:layout_below="@id/cxsj"
            android:text="¥"
            android:textColor="#f00" />

        <TextView
            android:id="@+id/crjg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cxsj"
            android:layout_toRightOf="@id/rmb"
            android:text="2000"
            android:textColor="#f00"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/crjg"
            android:layout_alignBottom="@+id/crjg"
            android:layout_toEndOf="@+id/crjg"
            android:text="起/人(成人)" />

        <TextView
            android:id="@+id/rmb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etjg"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rmb"
            android:text="¥"
            android:textColor="#f00" />

        <TextView
            android:id="@+id/etjg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/crjg"
            android:layout_toRightOf="@id/rmb1"
            android:text="2000"
            android:textColor="#f00"
            android:textSize="20dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etjg"
            android:layout_alignBottom="@+id/etjg"
            android:layout_toEndOf="@+id/etjg"
            android:text="起/人(儿童)" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="17px"
        android:background="#eaebed" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="100px">

        <ImageView
            android:id="@+id/flag4"
            android:layout_width="35px"
            android:layout_height="30px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_toRightOf="@id/flag4"
            android:gravity="center_vertical"
            android:paddingLeft="15px"
            android:text="路线行程" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="#d1d1d1" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ListView
    android:background="#fff"
    android:id="@+id/lv_list"
    android:layout_above="@+id/mAutoLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></ListView>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1" />
        <com.zhy.autolayout.AutoLinearLayout

            android:id="@+id/mAutoLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="100px"
            >

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="60px"
                    android:gravity="center"
                    android:background="@drawable/shape_route_yello"
                    android:text="修改" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="60px"
                    android:gravity="center"
                    android:background="@drawable/shape_route_yello"
                    android:text="删除" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="60px"
                    android:gravity="center"
                    android:background="@drawable/shape_route_yello"
                    android:text="发布" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
